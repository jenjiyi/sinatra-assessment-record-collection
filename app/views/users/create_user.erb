<h1>Sign-up to catalog your records</h1>
<p><% unless locals.empty? %>
  <%= message %>
<% end %></p>
<form class="form-inline" action="/signup" method="post">
  <div class="form-group"><label for="username">Username:</label><input class="form-control" type="text" name="username" id="username">
  </div>
  <div class="form-group"><label for="email">Email:</label><input class="form-control" type="email" name="email" id="email"></div>
  <div class="form-group"><label for="password">Password:</label><input class="form-control" type="password" name="password" id="password"></div>
  <div class="form-group"><input type="submit" value="Sign-up" class="btn btn-default"></div>
</form>